{
    "name": "test-runner",
    "version": "1.0.0",
    "description": "Yes",
    "devDependencies": {
        "@types/body-parser": "^1.19.5",
        "@types/cors": "^2.8.16",
        "@types/express": "^4.17.21",
        "@types/helmet": "^4.0.0",
        "@types/mocha": "^10.0.3",
        "@types/node": "^20.9.4",
        "mocha": "^10.2.0",
        "prettier": "^3.0.3",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.2.2"
    },
    "dependencies": {
        "arg": "^5.0.2",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "helmet": "^7.0.0",
        "http": "^0.0.1-security",
        "ts-node-dev": "^2.0.0"
    },
    "scripts": {
        "build": "tsc",
        "build-docker": "docker build -t ${npm_package_name}:${npm_package_version} -t ${npm_package_name}:dev .",
        "start": "set debug=* && ts-node-dev --respawn --transpile-only ./src/index.ts",
        "prod": "tsc && node ./build/index.js",
        "test": "mocha --require ts-node/register tests/*",
        "fmt": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
        "fmt-check": "prettier --check \"**/*.+(js|ts|json)\""
    },
    "prettier": {
        "tabWidth": 4
    }
}
